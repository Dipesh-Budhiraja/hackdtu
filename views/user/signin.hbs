    <h3 class="display-5 text-center py-2 my-3">My Website</h3>
    <div class="box container">
        {{#if hasErrors}}
        <!-- validation errors -->
              <div class="alert alert-danger">
                  {{#each messages}}
                  <p>{{this}}</p>
                  {{/each}}
              </div>
        {{/if}}
      <form method = 'post' action = '/users/signin'>
        <h3 id="account">Login</h3>
        <div class="form-group">
          <label for="username">User Name</label>
          <input type="text" name="username" required class="form-control">
        </div>
        <div class="form-group">
          <label for="password" >Password</label>
          <input type="password" name="password" required class="form-control">
        </div>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">

        <button type="submit" name="button" class="btn btn-warning btn-block">Submit</button>
      </form>
      <div >
          Don't have an account? <a href="/users/signup">Sign up</a>
      </div>

    </div>



